<%- include('partials/header') %>

<div class="login-container">
    <div class="header">
        <h1 id="login-title" data-translate="loginTitle">Admin Login</h1>
    </div>
    <div class="container">
        <form id="loginForm">
            <input type="text" id="username" placeholder="Username" required data-translate="usernamePlaceholder">
            <input type="password" id="password" placeholder="Password" required data-translate="passwordPlaceholder">
            <button type="submit" id="login-button" data-translate="loginButton">Login</button>
        </form>
    </div>
</div>

